<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Custom Adapter Layout From: https://github.com/codepath/android_guides/wiki/Using-an-ArrayAdapter-with-ListView -->
    <!-- Card View From: https://developer.android.com/training/material/lists-cards.html
         Also from Anu Mobile App Dev Class Notes -->

    <!-- Android Transparency in views From: https://stackoverflow.com/questions/15852122/hex-transparency-in-colors -->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="10dp">
        <!--card_view:cardCornerRadius="1dp"-->

        <RelativeLayout
            android:id="@+id/cvRelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSupplierName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Supplier Name"
                android:textColor="@color/colorPrimary"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSupplierName"
                android:text="Time Stamp"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvTotalSpent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTimestamp"
                android:text="Total Spent"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTotalSpent"
                android:text="Username"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUsername"
                android:text="Category"
                android:textColor="#000000"
                android:textSize="15dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>